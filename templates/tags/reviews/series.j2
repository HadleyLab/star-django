{% extends "datatable.j2" %}

{% set page_title = 'Series annotations' %}

{% block header %}
  <h2 class="font-light" style="display: inline-block; margin-bottom: 0">{{ page_title }}</h2>
  <a href="{{ url('export_samples_annotations') }}" class="btn btn-success" style='float:right;'>
    Export samples annotations
  </a>
{% endblock %}

{% block script %}
    {{ super() }}
    <script type="text/javascript">
        datatableview.auto_initialize = false;
        $(function(){
            datatableview.initialize($('.datatable'), {
                columnDefs: [
                    {
                        render: function ( data, type, row ) {
                            console.log(row)
                            return '<a href="/annotations/' + row[0] + '/samples/">' + data + '</a>';
                        },
                        targets: [4]
                    }
                ]
            });
        });
    </script>
{% endblock %}
