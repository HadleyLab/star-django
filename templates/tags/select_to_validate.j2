{% extends "base.j2" %}

{% set page_title = 'Select Annotation to Validate' %}

{% block content %}
    <div class="table-responsive">
      <table class="table table-striped table-bordered" style="width: auto">
        <thead>
          <tr>
            <th></th>
            <th>Serie</th>
            <th>Platform</th>
            <th>Tag</th>
          </tr>
        </thead>
        <tbody>
          {% for st in series_tags %}
            <tr>
              <td>
                  <a href="{{ url('on_demand_validate') }}?series_tag_id={{ st.id }}" class="btn btn-success btn-xs">Validate</a>
              </td>
              <td>{{ st.series.gse_name }}</td>
              <td>{{ st.platform.gpl_name }}</td>
              <td>{{ st.tag.tag_name }}</td>
            </tr>
          {% endfor %}
        </tbody>
      </table>
    </div>
{% endblock %}
