{% extends "base.j2" %}

{% block content %}
<h2>Account Info</h2>
<p id="account-info">Loading...</p>
<script type="text/javascript">
function infoError() {
    $("#account-info").html('Failed to get account info.').css('color', 'red');
}

$.ajax('/account_info/', {
    dataType: 'json',
    success: function (data) {
      if (!data.success) {
          infoError();
          return;
      }

      var labels = ['available_balance', 'customer', 'identifier', 'email'];
      $("#account-info").html(labels.map(function (label) {
          var value = data.account[label];
          return '<b>' + label + ':</b> '
                 + (label == 'available_balance' ? '$' + value / 100 : value);
      }).join(', '));
    },
    error: infoError
})
</script>

<h2>Payments</h2>

<div class="table-responsive">
  <table class="table table-striped table-bordered" id="data-table">
    <thead>
      <tr>
        <th>Date</th>
        <th>Receiver</th>
        <th>Method</th>
        <th class="text-right">Samples</th>
        <th class="text-right">Sum</th>
        <th class="text-right">State</th>
        <th class="text-right">Success</th>
      </tr>
    </thead>
    <tbody>
      {% for payment in payments %}
        <tr>
          <td>{{ payment.created_on }}</td>
          <td>{{ payment.receiver.first_name }} {{ payment.receiver.last_name }}</td>
          <td>{{ payment.method }}</td>
          <td class="text-right">{{ payment.samples }}</td>
          <td class="text-right">${{ payment.amount }}</td>
          <td class="text-right">{{ payment.get_state_display() }}</td>
          <td class="text-right">{{ payment.extra.success }}</td>
        </tr>
      {% endfor %}
    </tbody>
  </table>
</div>

{% endblock %}
