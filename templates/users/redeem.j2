{% extends "base.j2" %}

{% block content %}
<h2>Redeem</h2>

{% if active %}
    <p>Ordering Tango Card for you right now. Wait a bit and check your email.</p>
{% else %}
    <p>You have <b>{{ stats.samples_unpayed }}</b> new samples,
       which amounts to <b>${{ stats.amount_unpayed }}</b> reward.</p>

    {% if stats.samples_unpayed %}
        <form class="form" method="post">
            {% csrf_token %}
            <button type="submit" class="btn btn-primary">Redeem</button>
        </form>
    {% else %}
        <p>Nothing to redeem now.</p>
    {% endif %}
{% endif %}

{% endblock %}
